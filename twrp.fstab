# Sistema y vendor
/dev/block/platform/bootdevice/by-name/system    /system    ext4    ro    wait,verify
/dev/block/platform/bootdevice/by-name/vendor    /vendor    ext4    ro    wait,verify

# Datos con cifrado FBE (Â¡ESTA ES LA CLAVE!)
/dev/block/platform/bootdevice/by-name/userdata  /data      ext4    noatime,nosuid,nodev,noauto_da_alloc,errors=panic    wait,check,formattable,forcefdeorfbe=/dev/block/platform/bootdevice/by-name/metadata

# Cache
/dev/block/platform/bootdevice/by-name/cache     /cache     ext4    noatime,nosuid,nodev,noauto_da_alloc,discard    wait,check,formattable

# Particiones importantes de MediaTek
/dev/block/platform/bootdevice/by-name/nvdata    /nvdata    ext4    noatime,nosuid,nodev,noauto_da_alloc,discard    wait,check
/dev/block/platform/bootdevice/by-name/nvcfg     /nvcfg     ext4    noatime,nosuid,nodev,noauto_da_alloc,commit=1,nodelalloc    wait,check
/dev/block/platform/bootdevice/by-name/persist   /persist   ext4    noatime,nosuid,nodev,noauto_da_alloc,commit=1,nodelalloc    wait,check

# Boot y recovery
/dev/block/platform/bootdevice/by-name/boot      /boot      emmc    defaults    defaults
/dev/block/platform/bootdevice/by-name/recovery  /recovery  emmc    defaults    defaults

# Metadata para cifrado
/dev/block/platform/bootdevice/by-name/metadata  /metadata  emmc    defaults    defaults
